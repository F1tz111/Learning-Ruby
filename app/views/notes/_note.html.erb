<div id="<%= dom_id note %>" class="border border-dark rounded p-4 <%= note.color %> bg-light">
  <p class="fs-3 fw-light px-3">
    <strong>Title:</strong> <%= note.title %>
  </p>

  <div class="border-top border-dark w-100 py-3"></div>

  <p class="fs-5 px-3">
    <strong>Description:</strong> <%= note.description %>
  </p>

  <% if action_name != "show" %>
    <div class="mt-3">
      <%= link_to "Show this note", note, class: "btn btn-secondary me-2" %>
      <%= link_to "Edit this note", edit_note_path(note), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
