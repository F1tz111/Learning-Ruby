<p class="text-success"><%= notice %></p>

<div class="container mx-auto py-4">
  <div class="d-flex flex-column py-4">
    <%= render @note %>

    <div class="d-flex mt-4">
      <%= link_to "Edit this note", edit_note_path(@note), class: "btn btn-dark me-2" %>
    </div>

    <div class="mt-4">
      <%= button_to "Destroy this note", @note, method: :delete, class: "btn btn-danger" %>
    </div>
  </div>
</div>
