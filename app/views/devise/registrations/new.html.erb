<div class="container px-2">
  <div class="d-flex flex-column align-items-center justify-content-center">
    <%= link_to 'Aura Notes', root_path, class:'navbar-brand fw-bold fs-2 py-5' %>  

    <div class="border border-black d-flex flex-column align-items-center py-4 px-5 rounded">
      <h2 class="navbar-brand fw-bold fs-3 mb-3">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="d-flex flex-column my-4">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control form-control-lg rounded border border-black' %>
      </div>
    
      <div class="d-flex flex-column my-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class:'form-control form-control-lg rounded border border-black' %>
      </div>
    
      <div class="d-flex flex-column my-4">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'form-control form-control-lg rounded border border-black' %>
      </div>
        
      <div class="d-flex flex-column align-items-center my-4">
        <%= f.submit "Sign up", class:'w-50 border border-black rounded py-2 px-4 btn btn-dark hover:bg-gray-200 fw-semibold' %>
      </div>

      <% end %>
      </div>
      <div class="mt-4">
        <%= render "devise/shared/links" %>
      </div>
  </div>
</div>



